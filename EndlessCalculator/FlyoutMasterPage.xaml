<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage x:Class="EndlessCalculator.FlyoutMasterPage"
            xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:ec="clr-namespace:EndlessCalculator"
            IconImageSource="dotnet_bot"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            Title="Menu">

    <FlyoutPage.Flyout>
        <ec:FlyoutMenuPage x:Name="flyoutPage" />
    </FlyoutPage.Flyout>

    <FlyoutPage.Detail>
        <NavigationPage>
            <x:Arguments>
                <ec:MainPage />
            </x:Arguments>
        </NavigationPage>
    </FlyoutPage.Detail>

</FlyoutPage>